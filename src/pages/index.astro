<Layout title="Login - Legumfrut S.A.">
	<section class="relative hidden md:flex items-center justify-center bg-gradient-to-br from-indigo-600 via-blue-600 to-indigo-900 text-white px-12">
      <div class="max-w-md space-y-6">
        <div class="text-5xl font-bold">*</div>
        <h1 class="text-4xl font-bold">
          Hello <br /> SaleSkip! ðŸ‘‹
        </h1>
        <p class="text-lg text-indigo-100">
          Skip repetitive and manual sales-marketing tasks.  
          Get highly productive through automation.
        </p>
      </div>
    </section>

	<section class="flex items-center justify-center px-6">
      <div class="w-full max-w-md space-y-6">
        <h2 class="text-3xl font-bold">Welcome Back!</h2>
        <p class="text-sm text-gray-500">
          Donâ€™t have an account?
          <a href="#" class="text-indigo-600 font-medium">Create one</a>
        </p>

        <!-- FORM -->
        <form class="space-y-4">
          <input
            type="email"
            placeholder="Email"
            class="w-full border-b border-gray-300 py-2 focus:outline-none focus:border-indigo-600"
          />

          <input
            type="password"
            placeholder="Password"
            class="w-full border-b border-gray-300 py-2 focus:outline-none focus:border-indigo-600"
          />

          <button
            class="w-full bg-black text-white py-3 rounded-md hover:bg-gray-800 transition">
            Login Now
          </button>
        </form>

        <!-- GOOGLE -->
        <button
          class="w-full flex items-center justify-center gap-2 border py-3 rounded-md hover:bg-gray-50 transition">
          <img src="/google.svg" alt="Google" class="w-5 h-5" />
          Login with Google
        </button>

        <p class="text-sm text-center text-gray-400">
          Forgot password?
          <a href="#" class="text-black font-medium">Click here</a>
        </p>
      </div>
    </section>
